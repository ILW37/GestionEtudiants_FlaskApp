{% extends "base.html" %}

{% block content %}
<h2 class="mb-4">Liste des étudiants</h2>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Moyenne</th>
        </tr>
    </thead>

    <tbody>
        {% for e in etudiants %}
        <tr>
            <td>{{ e["nom"] }}</td>
            <td>{{ e["prenom"] }}</td>
            <td>{{ e["moyenne"] }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if etudiants|length == 0 %}
    <p class="text-muted">Aucun étudiant ajouté.</p>
{% endif %}
{% endblock %}
